<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Link Shortener</title>
    <link rel="stylesheet" href="index.css" />
</head>
<body>
<main>
    <section>
        <form method="post" action="/" id="shorten-link-form">
            <input type="text" name="long-url" />
            <button type="submit">SHORTEN</button>
        </form>
    </section>
</main>
<script>
  const formEl = document.getElementById("shorten-link-form");
  const sectionEl = document.querySelector("main section");

  formEl.addEventListener("submit", async function(e) {
	e.preventDefault();

	const form = this;
	const longUrl = form.querySelector("input[name=long-url]").value;

	const res = await fetch("/", {
	  method: "POST",
	  body: JSON.stringify({ longUrl }),
	  headers: {
		"Content-Type": "application/json"
	  }
	});
	const { shortUrl } = await res.json();
	const shortUrlEL = document.createElement("a");

	shortUrlEL.classList.add("short-url");
	shortUrlEL.href = shortUrl;
	shortUrlEL.textContent = shortUrl;

	sectionEl.appendChild(shortUrlEL);
  });
</script>
</body>
</html>
